
<Window x:Class="MessengerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Messenger - Вход" 
        Height="450" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Loaded="Window_Loaded">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <!-- Фон -->
        <Rectangle Fill="#0078D4" Opacity="0.1"/>
        
        <!-- Основной контент -->
        <StackPanel VerticalAlignment="Center" Margin="30">
            <!-- Заголовок -->
            <TextBlock Text="Вход в Messenger" 
                       FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,30"/>
            
            <!-- Форма входа -->
            <TextBlock Text="Email:" FontWeight="SemiBold"/>
            <TextBox x:Name="EmailBox" 
                     Text=" "
                     TextChanged="OnInputChanged"/>
            
            <TextBlock Text="Пароль:" FontWeight="SemiBold"/>
            <PasswordBox x:Name="PasswordBox" 
                         PasswordChanged="OnInputChanged"/>
            
            <!-- Забыли пароль -->
            <TextBlock x:Name="ForgotPasswordText" 
                       Text="Забыли пароль?" 
                       Foreground="#0078D4" 
                       TextDecorations="Underline"
                       Cursor="Hand"
                       HorizontalAlignment="Right"
                       Margin="0,0,0,20"
                       MouseDown="OnForgotPasswordClick"/>
            
            <!-- Кнопка входа -->
            <Button x:Name="SignInButton" 
                    Content="Войти" 
                    Background="#0078D4" 
                    Foreground="White"
                    FontWeight="Bold"
                    Click="OnSignInClick"
                    IsEnabled="False"/>
            
            <!-- Разделитель -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,20">
                <Rectangle Fill="LightGray" Height="1" Width="80" VerticalAlignment="Center"/>
                <TextBlock Text="или" Margin="10,0" Foreground="Gray"/>
                <Rectangle Fill="LightGray" Height="1" Width="80" VerticalAlignment="Center"/>
            </StackPanel>
            
            <!-- Кнопка регистрации -->
            <Button Content="Создать аккаунт" 
                    Background="Transparent" 
                    Foreground="#0078D4"
                    BorderBrush="#0078D4" 
                    BorderThickness="1"
                    Click="OnSignUpClick"/>
            
            <!-- Кнопка Google -->
            <Button Content="Войти через Google" 
                    Background="White" 
                    Foreground="#757575"
                    BorderBrush="#DDD" 
                    BorderThickness="1"
                    Margin="0,10,0,0"
                    Click="OnGoogleSignInClick">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="Войти через Google" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
            
            <!-- Статус -->
            <ProgressBar x:Name="ProgressBar" 
                         Height="10" 
                         IsIndeterminate="True" 
                         Visibility="Collapsed"
                         Margin="0,20,0,0"/>
            <TextBlock x:Name="StatusText" 
                       TextAlignment="Center" 
                       Foreground="Gray" 
                       Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>