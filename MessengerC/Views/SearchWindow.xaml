<Window x:Class="MessengerApp.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Поиск пользователей" 
        Height="500" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="White">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Панель поиска -->
        <Border Grid.Row="0" Background="#0088CC" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Поле ввода -->
                <TextBox x:Name="SearchTextBox" Grid.Column="1"
                         VerticalAlignment="Center"
                         Padding="10,8" FontSize="14"
                         Background="White" BorderThickness="0"
                         TextChanged="SearchTextBox_TextChanged">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="White" CornerRadius="5">
                                            <Grid>
                                                <ScrollViewer x:Name="PART_ContentHost" 
                                                              Margin="10,0,10,0"
                                                              VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </Grid>
        </Border>
        
        <!-- Список найденных пользователей -->
        <Border Grid.Row="1" Background="White">
            <ListView x:Name="UsersList" 
                      Background="White" 
                      BorderThickness="0"
                      SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="15,10" 
                                BorderBrush="#F0F0F0" 
                                BorderThickness="0,0,0,1"
                                Cursor="Hand"
                                MouseLeftButtonDown="UserItem_MouseLeftButtonDown">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Аватар пользователя -->
                                <Border Grid.Column="0" Width="45" Height="45" 
                                        CornerRadius="22.5" Background="#E0E0E0">
                                    <TextBlock Text="{Binding Initials}" 
                                               VerticalAlignment="Center" 
                                               HorizontalAlignment="Center"
                                               FontSize="16" FontWeight="500" 
                                               Foreground="#666"/>
                                </Border>
                                
                                <!-- Имя и информация -->
                                <StackPanel Grid.Column="1" Margin="15,0,0,0" 
                                            VerticalAlignment="Center">
                                    <TextBlock Text="{Binding DisplayName}" 
                                               FontSize="15" FontWeight="500"/>
                                    <TextBlock Text="{Binding StatusText}" 
                                               Foreground="#666" FontSize="13"/>
                                    <TextBlock Text="{Binding Email}" 
                                               Foreground="#999" FontSize="12"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>
        
        <!-- Сообщение, если ничего не найдено -->
        <Border Grid.Row="1" x:Name="NoResultsPanel" 
                Visibility="Collapsed" Background="White">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Пользователи не найдены" 
                           FontSize="16" FontWeight="500"/>
                <TextBlock Text="Попробуйте другой запрос" 
                           Foreground="#666" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Индикатор загрузки -->
        <Border Grid.Row="1" x:Name="LoadingPanel" 
                Visibility="Collapsed" Background="#80000000">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border Width="50" Height="50" CornerRadius="25" 
                        Background="White" Padding="10">
                    <TextBlock Text="⏳" FontSize="20" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center"/>
                </Border>
                <TextBlock Text="Поиск..." Margin="0,10,0,0"
                           Foreground="White" FontSize="14"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
