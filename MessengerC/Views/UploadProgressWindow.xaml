<Window x:Class="MessengerApp.UploadProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Отправка файла" 
        Height="150" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Topmost="True">
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Имя файла -->
        <TextBlock x:Name="FileNameTextBlock"
                   Grid.Row="0"
                   Text=""
                   TextWrapping="Wrap"
                   FontSize="14"
                   Margin="0,0,0,10"/>
        
        <!-- Прогресс-бар -->
        <ProgressBar x:Name="UploadProgressBar" 
                     Grid.Row="1"
                     Height="20"
                     Minimum="0" Maximum="100"
                     Value="0"
                     Margin="0,0,0,10"/>
        
        <!-- Текст прогресса -->
        <TextBlock x:Name="ProgressTextBlock" 
                   Grid.Row="2"
                   Text="0%"
                   HorizontalAlignment="Center"
                   FontSize="12"/>
    </Grid>
</Window>