<Window x:Class="MessengerApp.ChangeEmailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Изменение email" 
        Height="300" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Изменение email" FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>
            
            <TextBlock Text="Для подтверждения введите ваш пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,15"/>
            
            <TextBlock Text="Новый email:" Margin="0,0,0,5"/>
            <TextBox x:Name="NewEmailBox" Margin="0,0,0,20"/>
            
            <TextBlock Text="После изменения на новый email будет отправлено письмо для подтверждения" 
                       Foreground="Gray" FontSize="11" Margin="0,0,0,20"
                       TextWrapping="Wrap"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CancelButton" Content="Отмена" 
                        Click="CancelButton_Click" Width="100"/>
                <Button x:Name="ChangeButton" Content="Изменить email" 
                        Click="ChangeButton_Click" Width="120" Background="#0078D4" 
                        Foreground="White" Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
