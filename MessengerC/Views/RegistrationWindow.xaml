<Window x:Class="MessengerApp.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" 
        Height="500" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Создание аккаунта" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <!-- Форма -->
        <StackPanel Grid.Row="1">
            <!-- Имя -->
            <TextBlock Text="Имя (необязательно):"/>
            <TextBox x:Name="NameBox" 
                     Text="Ваше имя"/>
            <TextBlock x:Name="NameError" Foreground="Red" FontSize="11"/>
            
            <!-- Email -->
            <TextBlock Text="Email:"/>
            <TextBox x:Name="EmailBox" 
                     Text="example@mail.com"/>
            <TextBlock x:Name="EmailError" Foreground="Red" FontSize="11"/>
            
            <!-- Пароль -->
            <TextBlock Text="Пароль:"/>
            <PasswordBox x:Name="PasswordBox" 
                         PasswordChanged="OnPasswordChanged"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="PasswordStrengthText" Foreground="Gray" FontSize="11"/>
                <TextBlock Text=" (минимум 6 символов)" Foreground="Gray" FontSize="11" Margin="5,0,0,0"/>
            </StackPanel>
            <TextBlock x:Name="PasswordError" Foreground="Red" FontSize="11"/>
            
            <!-- Подтверждение пароля -->
            <TextBlock Text="Подтверждение пароля:"/>
            <PasswordBox x:Name="ConfirmPasswordBox"/>
            <TextBlock x:Name="ConfirmPasswordError" Foreground="Red" FontSize="11"/>
        </StackPanel>
        
        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="RegisterButton" Content="Зарегистрироваться" 
                    Click="OnRegisterClick" Background="#0078D4" Foreground="White"/>
            <Button Content="Отмена" Click="OnCancelClick" Margin="10,0,0,0"/>
        </StackPanel>
        
        <!-- Статус -->
        <StackPanel Grid.Row="3" Margin="0,20,0,0">
            <ProgressBar x:Name="ProgressBar" Height="10" IsIndeterminate="True" Visibility="Collapsed"/>
            <TextBlock x:Name="StatusText" TextAlignment="Center" Foreground="Gray" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
