<Window x:Class="MessengerApp.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChatWindow" Height="600" Width="400"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Style x:Key="MyMessageStyle" TargetType="Border">
            <Setter Property="Background" Value="#0088CC"/>
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="10,5,10,5"/>
            <Setter Property="MaxWidth" Value="300"/>
        </Style>
        
        <Style x:Key="TheirMessageStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="10,5,10,5"/>
            <Setter Property="MaxWidth" Value="300"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#0088CC" Height="60">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" Content="‹" 
                        Background="Transparent" Foreground="White"
                        FontSize="24" FontWeight="Bold" 
                        Width="50" Height="50"
                        Click="BackButton_Click"/>
                
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="OtherUserNameText" 
                               Text="Имя пользователя" 
                               Foreground="White" FontSize="16" FontWeight="Bold"/>
                    <TextBlock x:Name="OtherUserStatus" 
                               Text="онлайн" 
                               Foreground="White" FontSize="12" Opacity="0.8"/>
                </StackPanel>
                
                <Button Grid.Column="2" Content="⋮" 
                        Background="Transparent" Foreground="White"
                        FontSize="20" FontWeight="Bold"
                        Width="50" Height="50"
                        Click="MoreButton_Click"/>
            </Grid>
        </Border>
        
        <!-- Область сообщений -->
        <Border Grid.Row="1" Background="#F0F2F5">
            <ScrollViewer x:Name="MessagesScrollViewer" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="MessagesList" Margin="10">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{Binding IsMyMessage, Converter={StaticResource MessageStyleConverter}}">
                                <StackPanel>
                                    <TextBlock Text="{Binding Text}" 
                                               TextWrapping="Wrap"
                                               Foreground="{Binding IsMyMessage, Converter={StaticResource MessageTextColorConverter}}"
                                               FontSize="14"
                                               Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding Time}" 
                                               FontSize="11"
                                               Foreground="{Binding IsMyMessage, Converter={StaticResource MessageTimeColorConverter}}"
                                               HorizontalAlignment="Right"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
        
        <!-- Индикатор набора текста -->
        <Border Grid.Row="2" x:Name="TypingIndicator"
                Background="#E0E0E0" 
                CornerRadius="10"
                Padding="10,5"
                Margin="10,5"
                Visibility="Collapsed">
            <TextBlock x:Name="TypingText" 
                       Text="" 
                       FontSize="12" 
                       Foreground="#666"/>
        </Border>
        
        <!-- Панель ввода -->
        <Border Grid.Row="3" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="1" x:Name="MessageTextBox" 
                         BorderThickness="0" Background="#F0F2F5"
                         VerticalAlignment="Center" Margin="10,0" Padding="15,10"
                         FontSize="14" AcceptsReturn="True"
                         TextWrapping="Wrap" MinHeight="40"
                         VerticalScrollBarVisibility="Auto"
                         TextChanged="MessageTextBox_TextChanged"
                         KeyDown="MessageTextBox_KeyDown"/>
                
                <Button Grid.Column="2" x:Name="SendButton" Content="➤" 
                        Background="#0088CC" Foreground="White"
                        BorderThickness="0" FontSize="16" FontWeight="Bold"
                        Width="45" Height="45"  
                        Click="SendButton_Click"
                        IsEnabled="False"/>
            </Grid>
        </Border>
    </Grid>
</Window>
