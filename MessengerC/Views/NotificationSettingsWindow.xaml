<Window x:Class="MessengerApp.NotificationSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessengerApp"
        mc:Ignorable="d"
        Title="Настройки уведомлений" 
        Height="500" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Заголовок -->
        <TextBlock Grid.Row="0"
                   Text="Настройки уведомлений"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Left"/>
        
        <!-- Настройки -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Padding="0,0,5,0">
            <StackPanel>
                <!-- Основные настройки -->
                <GroupBox Header="Основные настройки"
                          Margin="0,0,0,15"
                          Padding="10">
                    <StackPanel>
                        <CheckBox x:Name="EnableNotificationsCheckBox"
                                  Content="Включить уведомления"
                                  IsChecked="{Binding Settings.IsEnabled, Mode=TwoWay}"/>
                        
                        <StackPanel Margin="20,5,0,0">
                            <CheckBox x:Name="PlaySoundCheckBox"
                                      Content="Воспроизводить звук"
                                      IsChecked="{Binding Settings.PlaySound, Mode=TwoWay}"
                                      IsEnabled="{Binding IsChecked, ElementName=EnableNotificationsCheckBox}"/>
                            
                            <CheckBox x:Name="ShowBannerCheckBox"
                                      Content="Показывать всплывающие уведомления"
                                      IsChecked="{Binding Settings.ShowBanner, Mode=TwoWay}"
                                      IsEnabled="{Binding IsChecked, ElementName=EnableNotificationsCheckBox}"
                                      Margin="0,10,0,0"/>
                            
                            <CheckBox x:Name="ShowPreviewCheckBox"
                                      Content="Показывать текст сообщения"
                                      IsChecked="{Binding Settings.ShowPreview, Mode=TwoWay}"
                                      Margin="20,5,0,0"
                                      IsEnabled="{Binding IsChecked, ElementName=ShowBannerCheckBox}"/>
                            
                            <CheckBox x:Name="SmartNotificationsCheckBox"
                                      Content="Умные уведомления"
                                      IsChecked="{Binding Settings.SmartNotifications, Mode=TwoWay}"
                                      Margin="0,10,0,0"
                                      IsEnabled="{Binding IsChecked, ElementName=EnableNotificationsCheckBox}"
                                      ToolTip="Не показывать уведомления, если вы активны в этом же чате"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                
                <!-- Информация о заглушенных чатах -->
                <GroupBox Header="Заглушенные чаты"
                          Margin="0,0,0,15"
                          Padding="10">
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap"
                                   TextAlignment="Left"
                                   Margin="5">
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap"
                                   TextAlignment="Left"
                                   Margin="5,10,5,5"
                                   FontStyle="Italic"
                                   Foreground="Gray">
                            <Run x:Name="MutedChatsCount" Text="0"/>
                        </TextBlock>
                    </StackPanel>
                </GroupBox>
                
                <!-- Настройки звука -->
                <GroupBox Header="Настройки звука"
                          Margin="0,0,0,15"
                          Padding="10">
                    <StackPanel>
                        <TextBlock Text="Выберите звук уведомления:" 
                                   Margin="0,0,0,5"/>
                        <ComboBox x:Name="SoundComboBox"
                                  SelectedValue="{Binding Settings.SoundName}"
                                  IsEnabled="{Binding IsChecked, ElementName=PlaySoundCheckBox}"
                                  Height="25">
                            <ComboBoxItem Content="По умолчанию" Tag="default"/>
                            <ComboBoxItem Content="Классический" Tag="classic"/>
                            <ComboBoxItem Content="Мелодичный" Tag="melodic"/>
                            <ComboBoxItem Content="Короткий" Tag="short"/>
                            <ComboBoxItem Content="Без звука" Tag="none"/>
                        </ComboBox>
                        
                        <CheckBox x:Name="VibrateCheckBox"
                                  Content="Вибрация (если поддерживается)"
                                  IsChecked="{Binding Settings.Vibrate, Mode=TwoWay}"
                                  Margin="0,10,0,0"
                                  IsEnabled="{Binding IsChecked, ElementName=EnableNotificationsCheckBox}"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Тестовое уведомление -->
                <Border BorderBrush="Gray" 
                        BorderThickness="1" 
                        CornerRadius="5"
                        Margin="0,0,0,15"
                        Padding="10"
                        Background="#F5F5F5">
                    <StackPanel>
                        <TextBlock Text="Тестовое уведомление" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,5"/>
                        <TextBlock TextWrapping="Wrap"
                                   Margin="0,0,0,10">
                        </TextBlock>
                        <Button x:Name="TestNotificationButton"
                                Content="Показать тестовое уведомление"
                                Width="200"
                                HorizontalAlignment="Left"
                                Click="TestNotificationButton_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Кнопки -->
        <Border Grid.Row="2"
                BorderBrush="LightGray"
                BorderThickness="0,1,0,0"
                Padding="0,10,0,0"
                Background="{DynamicResource WindowBackgroundBrush}">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button x:Name="CancelButton"
                        Content="Отмена"
                        Click="CancelButton_Click"/>
                <Button x:Name="SaveButton"
                        Content="Сохранить"
                        IsDefault="True"
                        Click="SaveButton_Click"
                        Background="#007ACC"
                        Foreground="White"
                        BorderBrush="#007ACC"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
