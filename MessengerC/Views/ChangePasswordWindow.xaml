<Window x:Class="MessengerApp.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Изменение пароля" 
        Height="300" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Изменение пароля" FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>
            
            <TextBlock Text="Текущий пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="CurrentPasswordBox" Margin="0,0,0,15"/>
            
            <TextBlock Text="Новый пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="NewPasswordBox" Margin="0,0,0,15"/>
            
            <TextBlock Text="Подтвердите новый пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,0,0,20"/>
            
            <TextBlock Text="Пароль должен содержать минимум 6 символов" 
                       Foreground="Gray" FontSize="11" Margin="0,0,0,20"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CancelButton" Content="Отмена" 
                        Click="CancelButton_Click" Width="100"/>
                <Button x:Name="ChangeButton" Content="Изменить пароль" 
                        Click="ChangeButton_Click" Width="120" Background="#0078D4" 
                        Foreground="White" Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>